---
import Leaf_1 from "./leafs/Leaf_1.astro";
import Leaf_2 from "./leafs/Leaf_2.astro";
import Leaf_3 from "./leafs/Leaf_3.astro";
---

<div class="flower_leafs">
        <Leaf_1 />
        <Leaf_2 />
        <Leaf_3 />
</div>

<style>
    .flower_leafs {
        position: relative;
        animation: blooming-flower 2s backwards;
        animation-delay: 1.1s;
    }

    .flower_leafs::after {
        content: "";
        position: absolute;
        left: 0;
        top: 0;
        transform: translate(-50%, -50%);
        width: 60vmin;
        height: 60vmin;
        background-color: #00e5ff;
        filter: blur(28vmin);
    }

    @keyframes blooming-flower {
        0% {
            transform: scale(0);
        }
    }
</style>
