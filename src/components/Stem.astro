---
import Leaf1 from "./leafs_stem/Leaf_1.astro";
import Leaf2 from "./leafs_stem/Leaf_2.astro";


---

<div class="flower_stem">
    <Leaf1 />
    <Leaf2 />
    
</div>

<style>
    .flower_stem {
        height: 35vmin;
        width: 1.5vmin;
        background-image: linear-gradient(
                to left,
                #15c55c 10%,
                rgba(21, 197, 92, 0.5) 50%,
                #15c55c 90%
            ),
            linear-gradient(
                to top,
                rgba(21, 197, 92, 0) 5%,
                rgba(33, 153, 81, 0.5) 40%,
                #15c55c 95%
            );
        box-shadow: inset 0 0 2px #15c55c;
        animation: grow-flower-tree 4s backwards;
    }

    @keyframes grow-flower-tree {
        0% {
            height: 0;
            border-radius: 1vmin;
        }
    }
</style>
